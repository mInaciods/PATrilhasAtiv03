using System;

class Program
{
  public static void Main(string[] args)
  {
    Console.Write("Digite um número de ponto flutuante: ");
    float num1 = float.Parse(Console.ReadLine());

    if (num1 == 0)
    { Console.Write("É igual a 0");
    }
    else{
      Console.Write("Não é igual a 0");
    }

  }
}
